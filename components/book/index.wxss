/* components/book/index.wxss */
.container{
    position: relative;
    width: 240rpx;
    height: 360rpx;
    box-shadow: 2px 2px 3px #e3e3e3;
}

.bg{
    width: 100%;
    height: 100%;
}

.wrap{
    position: absolute;
    width: 100%;
    bottom: 0;
    background: #ffffff;
    padding: 5rpx 10rpx 8rpx 15rpx;
    font-size: 24rpx;
    display: flex;
    flex-direction: column;
    box-sizing: border-box;
}

.title {
    margin-top: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.author {
    font-size: 20rpx;
    color: #999999;
    margin-bottom: 10rpx;
    text-overflow: ellipsis;
    white-space: nowrap;
    overflow: hidden;
}

.num{
    text-align: right;
    color: #666666;
    font-size: 20rpx;
}

