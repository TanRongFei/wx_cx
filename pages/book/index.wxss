/* pages/book/index.wxss */
.book{
    background: #f5f5f5;
}
.search-header{
    position: fixed;
    width: 100%;
    height: 80rpx;
    top: 0;
    z-index: 9;
    background: #ffffff;
    box-shadow: 0 4rpx 8rpx 0 rgba(7, 17, 27, 0.1);
    border-top: 1rpx solid #f5f5f5;
    display: flex;
    justify-content: center;
    align-items: center;
}

.wrap{
    width: 90%;
    height: 60rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    background: #f5f5f5;
    border-radius: 30rpx;
}

.icon{
    height: 28rpx;
    width: 28rpx;
}

.title{
    font-size: 28rpx;
    line-height: 1;
    margin-left: 10rpx;
}

.quality{
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 40rpx 0;
}

.quality-img{
    width: 107rpx;
    height: 34rpx;
}

.container{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-around;
}

.book-item{
    margin-bottom: 40rpx;
    padding: 0 40rpx;
}
